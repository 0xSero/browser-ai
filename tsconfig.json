{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "outDir": "dist",
    "noEmitOnError": true,
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "useUnknownInCatchVariables": false,
    "types": ["chrome", "node"],
    "lib": ["ES2022", "DOM"],
    "skipLibCheck": true
  },
  "include": [
    "background.ts",
    "content.ts",
    "ai/**/*.ts",
    "tools/**/*.ts",
    "sidepanel/**/*.ts",
    "tests/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["server/**", "dist/**", "node_modules/**"]
}
